{
  "version": "0.2.0",
  "tasks": [
    {
      "label": "gulpPrepareBuild",
      "type": "gulp",
      "task": "prepareBuild",
      "problemMatcher": []
    },
    {
      "label": "gulpPrepareWebContainer",
      "type": "gulp",
      "task": "prepareWebContainer",
      "problemMatcher": []
    },

    {
      "label": "haxeCurrentConfig",
      "type": "haxe",
      "args": "current configuration"
    },

    {
      "label": "customHaxeBuild",
      "dependsOn": [
        "gulpPrepareBuild",
        "haxeCurrentConfig"
      ]
    },

    {
      "label": "customHaxeBuildWeb",
      "dependsOn":[
        "gulpPrepareBuild",
        "haxeCurrentConfig",
        "gulpPrepareWebContainer"
      ]
    }
  ],
  
  "configurations": [
    {
      "name": "Dev Web",
      "request": "launch",
      "type": "chrome",
      "url": "file://${workspaceFolder}/bin/dev/web/index.html",
      "webRoot": "${workspaceFolder}/bin/dev/web",
      "preLaunchTask": {
        "type": "haxe",
        "args": "active configuration"
      }
    },
    {
      "name": "Dev Windows",
      "request": "launch",
      "type": "hl",
      "cwd": "${workspaceFolder}/bin/dev/win",
      "preLaunchTask": {
        "type": "haxe",
        "args": "active configuration"
      }
    },
    {
      "name": "Dev Portable",
      "request": "launch",
      "type": "hl",
      "cwd": "${workspaceFolder}/bin/dev/port",
      "preLaunchTask": {
        "task": "haxe",
        "type": "active configuration"
      }
    }
  ]
}